<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apphome.AppHome">

    <include
        android:id="@+id/apphome_toolbar"
        layout="@layout/rpo_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/apphome_static_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/darkgray"
        android:maxHeight="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apphome_toolbar">


    </View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/apphome_rcview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apphome_static_view" />

    <ImageView
        android:id="@+id/apphome_sort"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_sort_black_24dp"
        app:layout_constraintStart_toStartOf="@+id/apphome_static_view"
        app:layout_constraintTop_toBottomOf="@+id/apphome_toolbar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/sort_by_pos_no"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/apphome_static_view"
        app:layout_constraintStart_toEndOf="@+id/apphome_sort"
        app:layout_constraintTop_toTopOf="@+id/apphome_sort"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/apphome_devicecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Devices"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_sp_16"
        app:layout_constraintBottom_toTopOf="@+id/apphome_static_view"
        app:layout_constraintEnd_toEndOf="@+id/apphome_static_view"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>