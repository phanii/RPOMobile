<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".login.Login">

        <android.support.constraint.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.30" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dim8dp"

            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/loginheader" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dim8dp"
            android:layout_marginEnd="@dimen/dim8dp"
            android:layout_marginStart="@dimen/dim8dp"
            android:layout_marginTop="@dimen/dim8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/logos" />

        <android.support.constraint.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.30" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.70" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim8dp"
            android:layout_marginStart="@dimen/dim8dp"
            android:text="@string/store_manager"
            android:textAlignment="textEnd"
            android:textSize="@dimen/dim_sp_14"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim8dp"
            android:layout_marginEnd="@dimen/dim8dp"
            android:layout_marginTop="@dimen/dim8dp"
            android:text="@string/version"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim35dp"
            android:layout_marginTop="@dimen/dim_dp_16"
            android:gravity="center_vertical"
            android:text="@string/username"
            android:textSize="@dimen/dim_sp_14"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toTopOf="@+id/guideline4" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <EditText
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_dp_45"
            android:background="@drawable/background_white_edittext"
            android:elevation="@dimen/dim_dp_2"
            android:ems="10"
            android:hint="@string/hint_name"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/dim8dp"

            android:singleLine="true"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_dp_15"
            android:layout_marginTop="@dimen/dim_dp_24"
            android:text="@string/password"
            android:textSize="@dimen/dim_sp_14"
            app:layout_constraintEnd_toEndOf="@+id/username"
            app:layout_constraintStart_toStartOf="@+id/username"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <com.mindorks.editdrawabletext.EditDrawableText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_dp_45"
            android:layout_marginTop="@dimen/dim8dp"
            android:background="@drawable/background_white_edittext"
            android:drawableRight="@drawable/ic_questionmark"
            android:elevation="@dimen/dim_dp_2"
            android:ems="10"
            android:hint="@string/hint_password"


            android:inputType="textPassword"
            android:paddingStart="@dimen/dim8dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <ImageButton
            android:id="@+id/btn_change_language"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim8dp"
            android:layout_marginStart="@dimen/dim8dp"
            android:layout_marginTop="@dimen/dim32dp"
            android:background="@drawable/background_white_translate"
            android:elevation="@dimen/dim_dp_6"
            android:src="@drawable/ic_translate"
            app:layout_constraintEnd_toStartOf="@+id/guideline7"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/password" />

        <Button
            android:id="@+id/btn_user_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim8dp"
            android:layout_marginStart="@dimen/dim8dp"
            android:background="@drawable/background_rect_blue"
            android:elevation="@dimen/dim_dp_6"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_sp_16"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            app:layout_constraintStart_toEndOf="@+id/btn_change_language"
            app:layout_constraintTop_toTopOf="@+id/btn_change_language" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>